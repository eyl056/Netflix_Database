select performerName,
       contentsPosterURL,
       updateTime,
       distributeCompany,
       top5
from Contents
    inner join (
        select distinct performerID,
                        performerName,
                        contentsIndex
        from Performer
    ) Performer
where Performer.performerID = 3 and
      Contents.contentsIndex = Performer.contentsIndex;
